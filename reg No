#include <stdio.h>

int main() {
    int n, i, regNo;
    int arr[100];

    // Input array size
    printf("Enter number of students: ");
    scanf("%d", &n);

    // Input registration numbers
    printf("Enter registration numbers: ");
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Input registration number to search
    printf("Enter registration number to search: ");
    scanf("%d", &regNo);

    // Linear search
    int found = 0;
    for(i = 0; i < n; i++) {
        if(arr[i] == regNo) {
            found = 1;
            break;
        }
    }

    if(found) {
        printf("Registration number %d found at position %d.\n", regNo, i + 1);
    } else {
        printf("Registration number %d not found.\n", regNo);
    }

    return 0;
}
